<Window x:Class="Data_Keeper_v2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Data_Keeper_v2._0"
        mc:Ignorable="d"
        Title="Data Keeper v2.0" 
        Height="190" 
        Width="400" 
        ResizeMode="NoResize"
        Background="#007ACC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Foreground="White" Height="30" Width="100" Margin="0 0 0 40">Введите пароль:</Label>
        <PasswordBox x:Name="passwordField" Height="25" Width="320" Margin="0 20 0 0" BorderBrush="Orange" BorderThickness="2"></PasswordBox>
        <Label Foreground="White" Height="30" Width="170" Margin="0 0 0 40" Grid.Row="1" Content="Введите ключ шифрования:"/>
        <PasswordBox x:Name="keyField" Height="25" Width="320" Margin="0 20 0 0" BorderBrush="Orange" BorderThickness="2" Grid.Row="1"/>
        <Button Cursor="Hand" Grid.Row="2" Width="80" Height="20" Margin="0 0 0 10" Click="Button_Click">Подтвердить</Button>
     </Grid>
</Window>
